<Window x:Class="LabelPrinter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LabelPrinter.ValidationRules"
        mc:Ignorable="d"
        Title="Label 4.1 - Demo" 
        Height="720" 
        Width="1080"
        FontSize="15"
        WindowStartupLocation="CenterScreen"
        DataContext="{Binding Main, Source={StaticResource Locator}}" FontFamily="/LabelPrinter;component/Fonts/#Roboto">
    <Grid Margin="8">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="2.2*"/>
            <ColumnDefinition Width="2.4*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <DockPanel Grid.Column="0" Grid.Row="0">
            <TextBlock Width="100" Height="35" Text="Label Name :"  DockPanel.Dock="Left"/>
            <ComboBox  Width="200" Height="35" DockPanel.Dock="Right"/>
        </DockPanel>

        <TextBlock Text="Label 4.1 - Demo" Grid.Column="1" Grid.Row="0" Height="35" HorizontalAlignment="Center" FontSize="20"/>

        <Grid Grid.Column="2" Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.5*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width=".8*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Label Width:" Grid.Column="0" Grid.Row="0" Margin="5"/>
            <TextBox 
                Grid.Column="1"
                Grid.Row="0" 
                Margin="5"
                TextChanged="UpdateLabelEvent">
                <Binding Path="LabelWidth" UpdateSourceTrigger="PropertyChanged" Mode="TwoWay">
                    <Binding.ValidationRules>
                        <local:MinMaxValidationRule MaxValue="400" MinValue="50"/>
                    </Binding.ValidationRules>
                </Binding>
            </TextBox>
            <TextBlock Text="mm" Grid.Row="0" Grid.Column="2" Margin="5"/>

            <TextBlock Text="Label Height:" Grid.Row="1" Grid.Column="0" Margin="5"/>
            <TextBox
                      Grid.Row="1" 
                      Grid.Column="1" 
                      Margin="5" 
                      Text="{Binding LabelHeight, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                      TextChanged="UpdateLabelEvent"/>
            <TextBlock Text="mm" Grid.Row="1" Grid.Column="2" Margin="5"/>

            <TextBlock Text="Distance from left:" Grid.Row="2" Grid.Column="0" Margin="5"/>
            <TextBox Grid.Row="2" Grid.Column="1" Margin="5" Text="{Binding DistanceFromLeft, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            <TextBlock Text="mm" Grid.Row="2" Grid.Column="2" Margin="5"/>
        </Grid>
        <Grid Grid.Column="0" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="135*"/>
                <ColumnDefinition Width="60*"/>
                <ColumnDefinition Width="46*"/>
                <ColumnDefinition Width="75*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height=".2*"/>
                <RowDefinition Height=".2*"/>
                <RowDefinition Height=".2*"/>
                <RowDefinition Height=".2*"/>
                <RowDefinition Height=".2*"/>
                <RowDefinition Height=".2*"/>
                <RowDefinition Height=".2*"/>
                <RowDefinition Height=".2*"/>
                <RowDefinition Height=".2*"/>
                <RowDefinition Height=".2*"/>
                <RowDefinition Height=".2*"/>
                <RowDefinition Height=".2*"/>
                <RowDefinition Height=".2*"/>
                <RowDefinition Height=".2*"/>
                <RowDefinition Height=".2*"/>
                <RowDefinition Height=".2*"/>
                <RowDefinition Height=".2*"/>
                <RowDefinition Height=".2*"/>
                <RowDefinition Height=".2*"/>
                <RowDefinition Height=".2*"/>
            </Grid.RowDefinitions>
            <TextBlock Text="Char Width" Grid.Column="0" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="30.443,0,30.443,0.992"/>

            <ComboBox x:Name="CharWidthComboBox0" Cursor="Hand" ItemsSource="{Binding Row1.CharWidths, Mode=TwoWay}" SelectedItem="{Binding Row1.SelectedCharWidth}" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Center" Width="60" Margin="37.648,0,37.649,0" FontSize="10" Height="17.768" VerticalAlignment="Top" SelectionChanged="UpdateLabelEvent"/>
            <ComboBox x:Name="CharWidthComboBox1" Cursor="Hand" ItemsSource="{Binding Row2.CharWidths, Mode=TwoWay}" SelectedItem="{Binding Row2.SelectedCharWidth}" Grid.Row="2" Grid.Column="0" HorizontalAlignment="Center" Width="60" Margin="37.648,0.577,37.649,2" FontSize="10" SelectionChanged="UpdateLabelEvent"/>
            <ComboBox x:Name="CharWidthComboBox2" Cursor="Hand" ItemsSource="{Binding Row3.CharWidths}" SelectedItem="{Binding Row3.SelectedCharWidth}" Grid.Row="3" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Top" Width="60" Margin="37.648,2,37.649,0" FontSize="10" SelectionChanged="UpdateLabelEvent"/>
            <ComboBox x:Name="CharWidthComboBox3" Cursor="Hand" ItemsSource="{Binding Row4.CharWidths}" SelectedItem="{Binding Row4.SelectedCharWidth}" Grid.Row="4" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Top" Width="60" Margin="37.648,1.998,37.649,0" FontSize="10" SelectionChanged="UpdateLabelEvent"/>
            <ComboBox x:Name="CharWidthComboBox4" Cursor="Hand" ItemsSource="{Binding Row5.CharWidths}" SelectedItem="{Binding Row5.SelectedCharWidth}" Grid.Row="5" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Top" Width="60" Margin="37.648,2,37.649,0" FontSize="10" SelectionChanged="UpdateLabelEvent"/>
            <ComboBox x:Name="CharWidthComboBox5" Cursor="Hand" ItemsSource="{Binding Row6.CharWidths}" SelectedItem="{Binding Row6.SelectedCharWidth}" Grid.Row="6" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Top" Width="60" Margin="37.648,2,37.649,0" FontSize="10" SelectionChanged="UpdateLabelEvent"/>
            <ComboBox x:Name="CharWidthComboBox6" Cursor="Hand" ItemsSource="{Binding Row7.CharWidths}" SelectedItem="{Binding Row7.SelectedCharWidth}" Grid.Row="7" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Top" Width="60" Margin="37.648,1.998,37.649,0" FontSize="10" SelectionChanged="UpdateLabelEvent"/>
            <ComboBox x:Name="CharWidthComboBox7" Cursor="Hand" ItemsSource="{Binding Row8.CharWidths}" SelectedItem="{Binding Row8.SelectedCharWidth}" Grid.Row="8" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Top" Width="60" Margin="37.648,2,37.649,0" FontSize="10" SelectionChanged="UpdateLabelEvent"/>
            <ComboBox x:Name="CharWidthComboBox8" Cursor="Hand" ItemsSource="{Binding Row9.CharWidths}" SelectedItem="{Binding Row9.SelectedCharWidth}" Grid.Row="9" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Top" Width="60" Margin="37.648,2,37.649,0" FontSize="10" SelectionChanged="UpdateLabelEvent"/>
            <ComboBox x:Name="CharWidthComboBox9" Cursor="Hand" ItemsSource="{Binding Row10.CharWidths}" SelectedItem="{Binding Row10.SelectedCharWidth}" Grid.Row="10" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Top" Width="60" Margin="37.648,1.998,37.649,0" FontSize="10" SelectionChanged="UpdateLabelEvent"/>
            <ComboBox x:Name="CharWidthComboBox10" Cursor="Hand" ItemsSource="{Binding Row11.CharWidths}" SelectedItem="{Binding Row11.SelectedCharWidth}" Grid.Row="11" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Top" Width="60" Margin="37.648,2,37.649,0" FontSize="10" SelectionChanged="UpdateLabelEvent"/>
            <ComboBox x:Name="CharWidthComboBox11" Cursor="Hand" ItemsSource="{Binding Row12.CharWidths}" SelectedItem="{Binding Row12.SelectedCharWidth}" Grid.Row="12" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Top" Width="60" Margin="37.648,2,37.649,0" FontSize="10" SelectionChanged="UpdateLabelEvent"/>
            <ComboBox x:Name="CharWidthComboBox12" Cursor="Hand" ItemsSource="{Binding Row13.CharWidths}" SelectedItem="{Binding Row13.SelectedCharWidth}" Grid.Row="13" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Top" Width="60" Margin="37.648,1.998,37.649,0" FontSize="10" SelectionChanged="UpdateLabelEvent"/>
            <ComboBox x:Name="CharWidthComboBox13" Cursor="Hand" ItemsSource="{Binding Row14.CharWidths}" SelectedItem="{Binding Row14.SelectedCharWidth}" Grid.Row="14" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Top" Width="60" Margin="37.648,2,37.649,0" FontSize="10" SelectionChanged="UpdateLabelEvent"/>
            <ComboBox x:Name="CharWidthComboBox14" Cursor="Hand" ItemsSource="{Binding Row15.CharWidths}" SelectedItem="{Binding Row15.SelectedCharWidth}" Grid.Row="15" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Top" Width="60" Margin="37.648,2,37.649,0" FontSize="10" SelectionChanged="UpdateLabelEvent"/>

            <TextBlock Text="High" Grid.Column="1" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <CheckBox x:Name="HighCheckBox0" IsChecked="{Binding Row1.IsHigh}" Cursor="Hand" Grid.Row="1" Grid.Column="1" Content="" HorizontalAlignment="Center" VerticalAlignment="Center" Click="UpdateLabelEvent"/>
            <CheckBox x:Name="HighCheckBox1" IsChecked="{Binding Row2.IsHigh}" Cursor="Hand" Grid.Row="2" Grid.Column="1" Content="" HorizontalAlignment="Center" VerticalAlignment="Center" Click="UpdateLabelEvent"/>
            <CheckBox x:Name="HighCheckBox2" IsChecked="{Binding Row3.IsHigh}" Cursor="Hand" Grid.Row="3" Grid.Column="1" Content="" HorizontalAlignment="Center" VerticalAlignment="Center" Click="UpdateLabelEvent"/>
